{% for usr in users_list %}
	<li id="user_{{usr.getId()}}">

	{% if  usr.getProfile().getPicture() %}
		<img class="user-picture" src="{{usr.getProfile().getPicture()}}?{{time}}"/>
	{% else %}
		{% image '@ScubeBaseBundle/Resources/public/images/default_picture.png'	%}
			<img class="user-picture" src="{{ asset_url }}" />
		{% endimage %}
	{% endif %}

	<span>{{usr.getFirstname()}} {{usr.getSurname()}}</span>
	
	{% if group_id %}
		<a style="float:right;margin-top:5px;" href="#" onclick="remove_connection_from_group({{usr.getId()}}, {{group_id}});" >
		{% image '@ScubeBaseBundle/Resources/public/images/remove.png' %}
		<img width="16" src="{{ asset_url }}" alt="Remove"/></a>
		{% endimage %}
		</a> 
	{% endif %}
	
	<input type="hidden" value="{{usr.getId()}}"/></li>
{% endfor %}