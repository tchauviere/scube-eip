{% extends 'ScubeBaseBundle:Base:base_application.html.twig' %}


{% block body %}
{{ parent() }}

<div class="Application">

<h1>Edit profile</h1>

{% if success %}
	<p class="form_success">Your profile has been successfully updated.</p>
{% endif %}
<form action="{{ path('_edit_profile') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}

    <input type="submit" value="Save profile" />
</form>


</div>

{% endblock %}