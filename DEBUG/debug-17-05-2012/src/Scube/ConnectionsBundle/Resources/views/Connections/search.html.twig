{% extends 'ScubeBaseBundle:Base:base_application.html.twig' %}


{% block body %}
{{ parent() }}

<div class="Application">

<table class="table_content">
<tr>
	<td class="sidebar_left">
		<ul class="sidebar_navigation">
			<li><a href="{{ path("ConnectionsBundle_homepage")}}">My connections</a></li>
			<li><a href="{{ path("ConnectionsBundle_search")}}">Search contact</a></li>
		</ul>
	</td>
	<td class="sidebar_main">
		<h1>Find other connections</h1>
		<table class="table_full_size">
			{% for usr in users_list %}
				{% if usr.getId() != user.getId()%}
				<tr>
					<td>
						<div class="table_title">{{usr.getFirstname()}} {{usr.getSurname()}}</div>
					</td>
					<td>
						<a href="{{ path("AdminSettingsBundle_edit", { 'id': setting.getId()})}}">Add to default</a>
					</td>
				</tr>
				{% endif %}
			{% endfor %}
		</table>
	</td>
</tr>
</div>

{% endblock %}
