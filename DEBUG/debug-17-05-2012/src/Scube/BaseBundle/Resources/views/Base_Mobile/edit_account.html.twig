{% extends 'ScubeBaseBundle:Base_Mobile:base.html.twig' %}


{% block body %}
{{ parent() }}
{% block back_btns %}{% endblock %}

<div data-role="content" data-theme="b">
	<h1>Edit Account</h1>

		{% if success %}
			<p class="form_success">Your account has been successfully updated.</a>.</p>
		{% endif %}
		<form action="{{ path('ScubeAccountBundle_homepage') }}" method="post" {{ form_enctype(form) }}>
