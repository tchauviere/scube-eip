{% else %}
<a href="{{ path('ScubeManageFileBundle_pictures_upload') }}"> <input type="button" value="Upload an other picture"> </a>
<a href="{{ path('ScubeManageFileBundle_pictures_delete') }}"> <input type="button" value="Delete pictures"> </a>
{% endif %}

</div>