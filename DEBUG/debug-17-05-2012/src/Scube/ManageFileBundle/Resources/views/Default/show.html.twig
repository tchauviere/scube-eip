{% stylesheets
	'@ScubeManageFileBundle/Resources/public/css/gallery/jquery.galleryview-3.0-dev.css'
%}
	<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}

{% javascripts 
	'@ScubeManageFileBundle/Resources/public/js/jquery-1.7.2.min.js'
	'@ScubeManageFileBundle/Resources/public/js/jquery.easing.1.3.js'
	'@ScubeManageFileBundle/Resources/public/js/jquery.galleryview-3.0-dev.js'
	'@ScubeManageFileBundle/Resources/public/js/jquery.timers-1.2.js'
%}
	<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}

<ul id="gallery">
	{% for img in list %}
    	<li><img src="{{ img }}" data-title="" data-description=""></li>
    {% endfor %}
</ul>

<script>
	$('#gallery').galleryView({
    filmstrip_style: 'showall',
    filmstrip_position: 'right',
    frame_height: 32,
    frame_width: 50,
    panel_width: 800
});
</script>