{% extends 'ScubeBaseBundle:Base:core_application.html.twig' %}


{% block body %}
{{ parent() }}

<div class="Application">

<table class="table_content">
<tr>
	<td class="sidebar_left">
		<ul class="sidebar_navigation">
			<li><a href="{{ path("AdminUserBundle_homepage")}}">Manage users</a></li>
			<li><a href="{{ path("AdminUserBundle_groups")}}">Manage groups</a></li>
		</ul>
	</td>
	<td class="sidebar_main">
		<h1>Edit user {{user.getSurname()}} {{user.getFirstname()}}</h1>
	
		{% if success %}
			<p class="form_success">The user has been successfully updated.</p>
		{% endif %}
		<form action="{{ path("AdminUserBundle_user_edit", { 'id': user.getId()})}}" method="post" {{ form_enctype(form) }}>
			{{ form_widget(form) }}
		
			<input type="submit" value="Save" />
		</form>
	</td>
</tr>
</div>

{% endblock %}