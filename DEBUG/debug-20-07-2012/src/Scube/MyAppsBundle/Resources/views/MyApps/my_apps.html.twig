{% extends 'ScubeBaseBundle:Base:core_application.html.twig' %}


{% block body %}
{{ parent() }}

<div class="Application">

<table class="table_content">
<tr>
	<td class="sidebar_left">
		<ul class="sidebar_navigation">
			<li><a href="{{ path("ScubeMyAppsBundle_homepage")}}">My Apps</a></li>
			<li><a href="{{ path("ScubeMyAppsBundle_my_widgets")}}">My Widgets</a></li>
			<li><a href="{{ path("ScubeMyAppsBundle_add_widget")}}">Clip new Widgets</a></li>
		</ul>
	</td>
	<td class="sidebar_main">
		<h1>My Apps</h1>
	
		<table style="width:100%;">
		
			{% for app in app_list %}
			<tr>
				<td>
					<div class="table_title">{{app.getName()}}</div>
					<div class="table_text">{{app.getDescription()}}</div>
				</td>
				<td>
					<a href="{{ path(app.getlink()) }}">start !</a>
				</td>
			</tr>
			{% endfor %}
		</table>

	</td>
</tr>
</div>

{% endblock %}
