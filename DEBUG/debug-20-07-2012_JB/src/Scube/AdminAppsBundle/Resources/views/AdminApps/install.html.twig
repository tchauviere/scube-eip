{% extends 'ScubeBaseBundle:Base:core_application.html.twig' %}


{% block body %}
{{ parent() }}

<div class="Application">

<table class="table_content">
<tr>
	<td class="sidebar_left">
		{% include 'ScubeAdminAppsBundle:AdminApps:menu.html.twig' %}
	</td>
	<td class="sidebar_main">
		<h1>{% trans %}Install application{% endtrans %}</h1>
		
		{% if error %}
			<p class="form_error">{% trans %}An error occured{% endtrans %} : {{ error }}</p>
		{% endif %}
		
		<p>{% trans %}If your application is already installed, please uninstall before (for a reinstall process){% endtrans %}.</p>
		
		<form action="{{ path('AdminAppsBundle_install') }}" method="post" {{ form_enctype(form) }}>
			{{ form_widget(form) }}
		
			<input type="submit" value="{% trans %}Install now{% endtrans %}" />
		</form>
	</td>
</tr>
</div>

{% endblock %}
